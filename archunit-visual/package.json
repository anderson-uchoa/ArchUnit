{
  "name": "archunit-visual",
  "version": "0.5.0-SNAPSHOT",
  "description": "ArchUnit Visualization",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha --reporter spec src/test/app/**/*.js",
    "copyStatic": "find ./src/main/app/report -name '*.html' -or -name '*.json' -or -name '*.css' -exec cp {} ./build/example-report \\;",
    "browserify": "./node_modules/browserify/bin/cmd.js -r ./src/main/app/report/visualization.js:visualization -r ./src/main/app/report/css-adapter.js:css-adapter -r ./src/main/app/report/web-component-infrastructure.js:web-component-infrastructure -o build/example-report/visualization-bundle.js",
    "watch-js": "nodemon -e js,html,json,css -w src/main/app/report -x 'npm run copyStatic && npm run browserify'",
    "dev-web-server": "./node_modules/http-server/bin/http-server -c-1 build/example-report/"
  },
  "author": "Sebastian Mair <sebastian.mair@tngtech.com>, Peter Gafert <peter.gafert@tngtech.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "browserify": "^14.3.0",
    "chai": "^3.5.0",
    "http-server": "^0.10.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^1.0.1",
    "d3": "^4.9.1"
  }
}
