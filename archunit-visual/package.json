{
  "name": "archunit-visual",
  "version": "0.5.0-SNAPSHOT",
  "description": "ArchUnit Visualization",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha --reporter spec src/test/app/**/*.js",
    "copyStatic": "cp ./src/main/app/report/*.html ./src/main/app/report/*.json ./src/main/app/report/lib/*.js ./build/example-report",
    "browserifyGraph": "./node_modules/browserify/bin/cmd.js  -r ./src/main/app/report/graph.js:graph -o build/example-report/graph-bundle.js",
    "browserifyVisualizer": "./node_modules/browserify/bin/cmd.js -r ./src/main/app/report/graph-visualizer.js:tree -o build/example-report/graph-visualizer-bundle.js",
    "watch-js": "nodemon -e js,html,json -w src/main/app/report -x 'npm run copyStatic && npm run browserifyGraph && npm run browserifyVisualizer'",
    "dev-web-server": "./node_modules/http-server/bin/http-server build/example-report/"
  },
  "author": "Sebastian Mair <sebastian.mair@tngtech.com>, Peter Gafert <peter.gafert@tngtech.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^3.5.0",
    "http-server": "^0.10.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "browserify": "^14.3.0"
  }
}
