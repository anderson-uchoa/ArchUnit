{
  "name": "archunit-visual",
  "version": "0.5.0-SNAPSHOT",
  "description": "ArchUnit Visualization",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha --reporter spec src/test/app/**/*.js",
    "copyStatic": "find src/main/app/report/*.html src/main/app/report/*.css src/main/app/report/*.json src/main/app/report/menu/*.html src/main/app/report/menu/*.css -exec cp {} ./build/classes/example-report ';'",
    "browserify": "./node_modules/browserify/bin/cmd.js -r ./src/main/app/report/visualization.js:visualization -r ./src/main/app/report/web-component-infrastructure.js:web-component-infrastructure -o build/classes/example-report/visualization-bundle.js",
    "watch-js": "nodemon -e js,html,json,css -w src/main/app/report -x 'npm run copyStatic && npm run browserify'",
    "lint": "./node_modules/eslint/bin/eslint.js 'src/**/*.{js,html}'",
    "dev-web-server": "./node_modules/http-server/bin/http-server -c-1 build/classes/example-report/"
  },
  "author": "Sebastian Mair <sebastian.mair@tngtech.com>, Peter Gafert <peter.gafert@tngtech.com>",
  "license": "Apache-2.0",
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "d3": true,
      "ShadyCSS": true
    },
    "plugins": [
      "html"
    ],
    "rules": {
      "curly": "error",
      "prefer-const": [
        "error",
        {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }
      ]
    }
  },
  "devDependencies": {
    "browserify": "^14.3.0",
    "chai": "^3.5.0",
    "eslint": "^4.1.0",
    "eslint-plugin-html": "^3.0.0",
    "http-server": "^0.10.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "proxyquire": "^1.8.0"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^1.0.1",
    "d3": "^4.9.1"
  }
}
